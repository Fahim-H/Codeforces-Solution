#include <iostream>
#include <vector>
using namespace std;
void func(int num){
    if(num<=2)cout<<"0"<<endl;
    else if(num>2){
        int a=(num/2)+1;
        int b=num-1;
        cout<<(b-a)+1<<endl;
    }
}
int main(){
    int n; cin>>n;
    for(int i=0;i<n;i++){
        int in; cin>>in;
        func(in);
    }
    return 0;
}
