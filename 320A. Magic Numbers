#include <iostream>
#include <vector>
#include <string>
using namespace std;

int main(){
    string num; cin>>num;


    for(int i=0;i<num.size();i++){
        if(num[i]!='1' && num[i]!='4'){
            cout<<"NO"<<endl; return 0;
        }
    }
    if(num[0]=='4'){cout<<"NO"<<endl; return 0;}
    if (num.find("444") != num.npos){
            cout<<"NO"<<endl; return false;
        }
    else{cout<<"YES"<<endl;}
    return 0;
}
