#include <iostream>
#include <algorithm>
#include <vector>
using namespace std;
vector <int> vec;
int main(){
    int num,input;
    cin>>num;
    for(int i=0;i<num;i++){
        cin>>input;
        vec.push_back(input);
    }
    int count=0;
    for(int i=0;i<num;i++){
        if(vec[i]!=vec[i+1]){
            count++;
        }
    }
    cout<<count<<endl;
    return 0;
}
