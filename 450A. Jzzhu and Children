#include <iostream>
#include <vector>
#include <cmath>
using namespace std;
int main(){
    int n,m; cin>>n>>m;
    double holder=0,pos=0;
    for(int i=1;i<=n;i++){
        int kid; cin>>kid;
        if(ceil(kid/m)>=holder){
            holder = ceil(kid/m);
            pos=i;
        }
    }

    cout<<pos<<endl;
    return 0;
}
