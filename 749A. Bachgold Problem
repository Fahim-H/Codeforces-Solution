#include <iostream>
using namespace std;
int main()
{
    ios::sync_with_stdio(0);
    cin.tie(0);

    int num; cin>>num;
    cout<<num/2<<endl;

    if(num%2==0){
        for(int i=0;i<num/2;i++){
            cout<<"2"<<" ";
        }
        cout<<"\n";
    }
    else if(num%2==1){
        for(int i=0;i<(num/2)-1;i++){
            cout<<"2"<<" ";
        }
        cout<<"3 \n";
    }
    return 0;
}
